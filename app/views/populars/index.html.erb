<h1>Listing populars</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @populars.each do |popular| %>
      <tr>
        <td><%= link_to 'Show', popular %></td>
        <td><%= link_to 'Edit', edit_popular_path(popular) %></td>
        <td><%= link_to 'Destroy', popular, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Popular', new_popular_path %>
