<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div style="padding: 10px">
  	<div>
  		<%= f.select :event_site_id, [["오프라인", "10001"], ["온라인", "10002"]] %>
  	</div>
	  <div>
	  	<%= f.text_area :event_name, :size => "40x20" %>
	  </div>
	  <div>
	  	<%= f.fields_for :event_images do |event_image| %>
		  <%= event_image.file_field :image %>
		<% end %>
	  </div>
	  <%= f.hidden_field :push_flg,  :value=>true %>
	  <%= f.hidden_field :update_flg, :value=>true %>
	  <div class="actions">
	    <%= f.submit %>
	  </div>
  </div>
<% end %>
